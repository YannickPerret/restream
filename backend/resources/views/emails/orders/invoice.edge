<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }
        .header, .footer {
            background-color: #f4f4f4;
            padding: 20px;
        }
        .header h1, .footer h4 {
            margin: 0;
        }
        .company-details, .invoice-details {
            margin-bottom: 20px;
        }
        .company-details {
            text-align: left;
        }
        .invoice-details {
            text-align: right;
        }
        .invoice-details table {
            width: 100%;
        }
        .invoice-details table, .invoice-details table th, .invoice-details table td {
            border: 1px solid #ddd;
            border-collapse: collapse;
        }
        .invoice-details table th, .invoice-details table td {
            padding: 8px;
            text-align: left;
        }
        .total {
            font-weight: bold;
            text-align: right;
        }
        .footer {
            text-align: center;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <h1>Invoice</h1>
    </div>

    <div class="company-details">
        <h2>{{ company.name }}</h2>
        <p>{{ company.address }}</p>
        <p>{{ company.email }}</p>
        <p>{{ company.phone }}</p>
    </div>

    <div class="invoice-details">
        <h3>Invoice #: {{ invoice.number }}</h3>
        <p>Date: {{ invoice.date }}</p>
        <p>Due Date: {{ invoice.due_date }}</p>
    </div>

    <div>
        <h3>Bill To:</h3>
        <p>{{ billing.firstName }} {{ billing.lastName }}</p>
        <p>{{ billing.address }}</p>
        <p>{{ billing.city }}, {{ billing.state }} {{ billing.zip }}</p>
        <p>{{ billing.country }}</p>
        <p>Phone: {{ billing.phone }}</p>
    </div>

    <div class="invoice-details">
        <table>
            <thead>
            <tr>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            @each(item in items)
                <tr>
                    <td>{{ item.description }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>${{ item.unit_price.toFixed(2) }}</td>
                    <td>${{ (item.quantity * item.unit_price).toFixed(2) }}</td>
                </tr>
            @endeach
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="total">Subtotal:</td>
                <td class="total">${{ invoice.subtotal.toFixed(2) }}</td>
            </tr>
            @if(invoice.tax > 0)
            <tr>
                <td colspan="3" class="total">Tax ({{ invoice.tax_rate }}%):</td>
                <td class="total">${{ invoice.tax.toFixed(2) }}</td>
            </tr>
            @endif
            <tr>
                <td colspan="3" class="total">Total:</td>
                <td class="total">${{ invoice.total.toFixed(2) }}</td>
            </tr>
            </tfoot>
        </table>
    </div>

    <div class="footer">
        <h4>Thank you for your business!</h4>
    </div>
</div>

</body>
</html>
